<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Keyword - {{keys.keyword}}</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="main.js"></script>
	</head>
	<body>
		<header>
			<h1>Keyword - {{keys.keyword}}</h1>
			{{#if authorised}}
				<a href="/logout">Log out</a>
			{{else}}
				<a href="/login">Log in</a>
			{{/if}}
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
	<section>
      <div class="container">
        <main>
      <h4>Keywords</h4>
      <tr>
        {{#each keys}}  
        <td><a class="get" href="/keyword/{{this.keyword}}">{{this.keyword}}</a>
        {{/each}}
        </tr>
          </main>
        <div class="accordion">
          {{#each records }}
          <div class="faq-item" id="question{{this.id}}">
            <a class="faq-link" href="#question{{this.id}}">
             <h4>{{this.title}}</h4> 
            </a>
            <div class="answer">
              <h5>
                <img src="avatars/{{this.photo}}" />
                {{this.firstname}} {{this.lastname}}
              </h5>
              <p>
                {{this.summary}}
              </p>
              <p>
                Status:  {{this.status}}
              </p>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
		</section>
	</body>
</html>
