
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>FAQ - Questions</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="main.js"></script>
	</head>
	<body>
		<header>
		<h1>Questions</h1>
		<a href="/logout">Log out</a>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<main>
    <table>
      <tr><th>Photo</th><th>Title</th><th>Summary</th><th>Description</th><th>Options</th></tr>
      {{#each records}}
        <tr>
          <td><img src="avatars/{{this.photo}}" /></td>
          <td>{{this.title}}</td>
          <td>{{this.summary}}</td>
          <td>{{this.description}}</td>
          <td><a href="faq/answer/{{this.id}}">answer</a></td>
        </tr>
      {{/each}}
    </table>
		</main>
    <a class="post" href="/faq/post">New Question</a> 
	</body>
</html>
