<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Details - {{question.firstname}} {{question.lastname}}</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header>
			<h1>Details - {{question.firstname}} {{question.lastname}}</h1>
				<a href="/logout">Log out</a>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
	<main>
    <table>
      <tr><th>Title</th><th>Summary</th><th>Description</th></tr>
        <tr>
          <td>{{question.title}}</td>
          <td>{{question.summary}}</td>
          <td>{{question.description}}</td>
        </tr>
    </table>
    </main>
    <main>
      <form method="post" action="/faq/post/answer" enctype="multipart/form-data">
        <p>
          <label for="description">Answer</label><br />
          <textarea name="answer" placeholder="Enter answer" required></textarea>
        </p>
        <p><input type="submit" value="Submit"></p>
      </form>
    </main>
    <main>
      <table>
      <tr><th>Answers</th></tr>
        <tr>
          <td>{{answer.answer}}</td>
        </tr>
    </table>
    </main>
      <button class="back">Back</button>
	</body>
</html>
